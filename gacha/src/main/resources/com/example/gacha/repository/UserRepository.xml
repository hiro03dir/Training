<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.gacha.repository.UserRepository">
    <!-- idには対応するメソッド名を記述します -->
    <!-- select処理なのでselectタグで囲います -->
    <select id="findByName" resultType="com.example.gacha.dto.UserEntity">
        select * from users
    </select>
    <update id="updateCoin">
        update users set coin = #{coin} where name = #{name}
    </update>
</mapper>